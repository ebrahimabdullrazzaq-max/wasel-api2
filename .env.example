APP_NAME=VegetableDeliveryApp
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database - Railway will provide these automatically in production
DB_CONNECTION=pgsql

# Session & Sanctum
SESSION_DRIVER=database
SESSION_DOMAIN=localhost
SANCTUM_STATEFUL_DOMAINS=localhost:3000,localhost:8000

# Cache & Queue
CACHE_DRIVER=file
QUEUE_CONNECTION=database
FILESYSTEM_DISK=local

# Mail
MAIL_MAILER=log
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Optional: Twilio (if needed later)
# TWILIO_SID=
# TWILIO_TOKEN=
# TWILIO_PHONE=
